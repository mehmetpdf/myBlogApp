<% include ../partials/header %>

<body>

    <!-- Page Header -->
    <header class="masthead"
        style="background-image: url(https://wallpapers.wallhaven.cc/wallpapers/full/wallhaven-18339.jpg)">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>Clean Blog</h1>
                        <span class="subheading">A Blog Theme by Start Bootstrap</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <h2 style="text-align:center; margin-bottom:10px;">Edit Blog</h2>
        <form action="/editBlog/<%=foundBlog._id%>?_method=PUT" method="POST" class="text-center border border-light p-5">
            <div class="form-group">
                <label for="blogTitle">Blog Title</label>
                <input type="text" class="form-control" name="blog[title]" placeholder="Blog Title"
                    value="<%=foundBlog.title%>">
            </div>
            <div class="form-group">
                <label for="comSentence">Blog Commercial Sentence</label>
                <input type="text" class="form-control" name="blog[comSentence]" placeholder="Blog Commercial Sentence"
                    value="<%=foundBlog.comSentence%>">
            </div>
            <div class="form-group">
                <label for="comImage">Blog Commercial Image URL</label>
                <input type="text" class="form-control" name="blog[comImage]" placeholder="Blog Commercial Image URL"
                    value="<%=foundBlog.comImage%>">
            </div>
            <textarea name="blog[blog]" id="myTextArea"><%=foundBlog.blog%></textarea>
            <button id="myButton" class="btn btn-primary">Submit</button>

        </form>
    </div>
    <script src="https://cdn.ckeditor.com/4.11.4/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('blog[blog]');
    </script>
    <% include ../partials/footer %>