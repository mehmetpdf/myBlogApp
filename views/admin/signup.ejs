<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-lg-9 col-md-10 mx-auto">

      <div class="post-preview">
        <!-- Default form login -->
        <form action="/signup" method="POST" class="text-center border border-light p-5">

          <p class="h4 mb-4">Sign up</p>
          <input type="email" id="emailAdress" name="username" class="form-control mb-4" placeholder="E-mail" required>
          <input type="password" id="userPassword" name="password" class="form-control mb-4" placeholder="Password" required>

          <!-- Sign Up button -->
          <button class="btn btn-info btn-block my-4" type="submit">Sign Up</button>

          <!-- Register -->
          <p>Not a member?
            <a href="">Register</a>
          </p>

        </form>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>