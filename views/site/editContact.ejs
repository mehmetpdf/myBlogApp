<% include ../partials/header %>

<script>
    $(document).ready(function(){

        $("#myButton").click(function(){
            var contactImage       = $("#contactImage").val();
            var contactText        = CKEDITOR.instances.myTextArea.getData();
            var author           = $("#author").val();
            var comSentence      = $("#comSentence").val();
            var contactTitle      = $("#contactTitle").val();

            if(contactImage == ""){
                contactImage = "https://cdn.pixabay.com/photo/2015/09/05/20/02/coding-924920_960_720.jpg";
            }

            var data = {
                contactTitle : contactTitle,
                contactImage : contactImage,
                contactText : contactText,
                author : author,
                comSentence : comSentence
            }

            $.post("editContact", {data:data})
                .then(function(addedAbout){
                    console.log(addedAbout);
                });
        });
    });
</script>

<body>

    <!-- Page Header -->
    <header class="masthead"
        style="background-image: url(https://wallpapers.wallhaven.cc/wallpapers/full/wallhaven-18339.jpg)">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>Clean Blog</h1>
                        <span class="subheading">A Blog Theme by Start Bootstrap</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <h2 style="text-align:center; margin-bottom:10px;">Edit Contact</h2>
        <form action="/home" method="POST" class="text-center border border-light p-5">
            <div class="form-group">
                <label for="contactTitle">Contact Title</label>
                <input type="text" class="form-control" id="contactTitle" placeholder="Contact Title"
                    value="<%=foundContact.contactTitle%>">
            </div>
            <div class="form-group">
                <label for="contactImage">Contact Page Image URL</label>
                <input type="text" class="form-control" id="contactImage" placeholder="Contact Page Image URL" value="<%=foundContact.contactImage%>">
            </div>
            <div class="form-group">
                <label for="comSentence">Contact Commercial Sentence</label>
                <input type="text" class="form-control" id="comSentence" placeholder="Contact Commercial Sentence" value="<%=foundContact.comSentence%>">
            </div>
            <div class="form-group">
                <label for="author">Author</label>
                <input class="form-control" type="text" id="author" placeholder="Readonly input hereâ€¦" value="<%= currentUser.username %>" readonly>
            </div>
            <textarea name="editor" id="myTextArea"><%=foundContact.aboutText%></textarea>
            <button id="myButton" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <script src="https://cdn.ckeditor.com/4.11.4/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor');
    </script>

<% include ../partials/footer %>